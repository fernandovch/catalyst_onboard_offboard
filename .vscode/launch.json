{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch program",
            "program": "${workspaceFolder}/src/index.js",
            "args": ["--accounts"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Integration Testing",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": ["${workspaceFolder}/test/**/*.spec.js"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Unit Testing",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": ["${file}"]
        }
    ]
}
